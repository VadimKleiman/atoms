<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atoms.atoms.Main2Activity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/game"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/number_of_atoms"
                android:id="@+id/textView2"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/number_of_shoots"
                android:id="@+id/textView1"
                android:layout_gravity="right"
                android:layout_weight="0" android:layout_margin="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.example.atoms.atoms.AtomGameView
                android:id="@+id/gameview"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/repeat"
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/button_reset"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:id="@+id/button_check"
                android:layout_width="wrap_content"
                android:textSize="36sp"
                android:layout_height="wrap_content"
                android:text="@string/check_button"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/check"
                />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
